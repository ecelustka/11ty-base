<!DOCTYPE html>
<html lang="{{ metadata.lang }}">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        {% include "partials/meta-seo.njk" %} {% include "partials/meta-open-graph.njk" %} {% include
        "partials/meta-twitter-cards.njk" %}

        <link rel="stylesheet" href="{{ '/css/index.css' | url }}" />

        <link
            rel="alternate"
            href="{{ metadata.feed.path | url }}"
            type="application/atom+xml"
            title="{{ metadata.title }}"
        />
        <link
            rel="alternate"
            href="{{ metadata.jsonfeed.path | url }}"
            type="application/json"
            title="{{ metadata.title }}"
        />

        {# uncomment if you are using pwa plugin :) #} {#
        <script>
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('/sw.js')
            }
        </script>
        #}
    </head>
    <body {% if templateClass %} class="{{ templateClass }}" {% endif %}>
        {% include "components/header.njk" %}

        <main>{{ content | safe }}</main>

        {% include "components/footer.njk" %}

        <!-- Current page: {{ page.url | url }} -->

        <script src="{{ '/js/index.bundle.js' | url }}"></script>
    </body>
</html>
