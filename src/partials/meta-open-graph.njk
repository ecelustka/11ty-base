<meta property="og:type" content="{{ metadata.open_graph.type }}">

{% if metadata.open_graph.fb_id | length > 0 %}
    <meta property="fb:app_id" content="{{ metadata.open_graph.fb_id }}">
{% endif %}

<meta property="og:site_name" content="{{ metadata.open_graph.site_name }}">

<meta property="og:title" content="{{ open_graph.title or seo.title or metadata.open_graph.title }}">

<meta property="og:description" content="{{ open_graph.description or seo.description or metadata.open_graph.description }}">

{% if open_graph.images | length > 0 %}
    {% for image in open_graph.images %}
            <meta property="og:image" content="{{ metadata.cloudinary_url }}{{ image }}">
    {% endfor %}
{% else %}
    {% for image in metadata.open_graph.images %}
        <meta property="og:image" content="{{ metadata.cloudinary_url }}{{ image }}">
    {% endfor %}
{% endif %}

{% if metadata.open_graph.images_type | length > 0 %}
    <meta property="og:image:type" content="{{ metadata.open_graph.images_type }}">
{% endif %}

{% if metadata.open_graph.images_width | length > 0 %}
    <meta property="og:image:width" content="{{ metadata.open_graph.images_width }}">
{% endif %}

{% if metadata.open_graph.images_height | length > 0 %}
    <meta property="og:image:height" content="{{ metadata.open_graph.images_height }}">
{% endif %}
